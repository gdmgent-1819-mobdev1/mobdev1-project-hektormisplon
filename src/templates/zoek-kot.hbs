<div class="container_scroll">
  {{>header-nav-student}}
  <div class="header__bg"></div>
  <div class="container__page zoek-kot__container">
    <div class="zoek-kot__options">
      <div class="zoek-kot__option zoek-kot__search">
        <input class="zoek-kot__search-box" type="text">
        <div class="zoek-kot__search-toggle">
          <ion-icon name="search" size="large"></ion-icon>
        </div>
      </div>
      <button class="btn btn__toggle-search-interface" href="/swipeview" data-navigo>
        <h3>Swipe view</h3>
      </button>
      <div class="zoek-kot__option zoek-kot__filter">
        <select class="select zoek-kot__filter__dropdown dropdown" name="kot-filter">
          <option>Sort?</option>
          <option value="filter-price-asc">By price (ascending)</option>
          <option value="filter-price-desc">By price (descending)</option>
          <option value="filter-type">By type (room - studio)</option>
          <option value="filter-type">By type (studio - room)</option>
          <option value="filter-surface-asc">By surface (ascending)</option>
          <option value="filter-surface-desc">By surface (descending)</option>
          <option value="distance">By distance</option>
        </select>
        <ion-icon class="zoek-kot__search-toggle__icon icon" name="funnel" size="large"></ion-icon>
      </div>
    </div>
    <div class="grid-wrapper-center">
      {{#each koten}}
      <div class="kot">
        <div class="kot__header">
          <h2 class="kot__name">{{this.name}}</h2>
          <h3 class="kot__address">{{this.address}}</h3>
        </div>
        <div class="kot__body">
          <p class="kot__status">{{this.status}}</p>
          <p class="kot__city">{{this.city}}</p>
          <p class="kot__type">{{this.type}}</p>
          <h3 class="kot__total-price">€{{this.totalPrice}}/m</h3>
        </div>
        <div class="kot__details">
          <p class="kot__warranty"><span>Waarborg</span>€{{this.warranty}}</span></p>
          <p class="kot__floor">{{this.floor}}</p>
          <p class="kot__has-toilet">{{this.hasToilet}}</p>
          <p class="kot__has-kitchen"> {{this.hasKitchen}}</p>
          <p class="kot__has-shower"> {{this.hasShower}}</p>
          <p class="kot__has-furniture"> {{this.hasFurniture}}</p>
          <p class="kot__surface">{{this.surface}} m²</p>
        </div>
        <div class="kot__btn-group">
          <button class="btn kot__btn__more-details">
            <ion-icon name="add-circle" size="large"></ion-icon>
          </button>
          <button class="btn kot__btn__add-to-favourites">
            <ion-icon name="star" size="large"></ion-icon>
          </button>
        </div>
        <div class="kot__details">
          <button class="btn kot__btn__less-details">
            <ion-icon name="arrow-back" size="large"></ion-icon>
          </button>
          <h1 class="kot__details__title">
            Kot details
          </h1>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>
</div>